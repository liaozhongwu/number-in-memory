{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "removeComments": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es2017",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types/", "src/**/*"],
    "outDir": "dist",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
